{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2018",
        "lib": [
            "es6",
            "dom",
            "es2016",
            "es2017",
            "es2018"
        ],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "declaration": true,
        "rootDir": "./src",
        "outDir": "es",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "incremental": true,
        "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "custom-typings/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.tsx",
        "**/*.spec.ts"
    ]
}